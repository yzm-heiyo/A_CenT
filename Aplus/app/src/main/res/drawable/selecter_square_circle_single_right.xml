<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colortheme" />
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/color_white" />
            <stroke android:width="1dp" android:color="@color/colortheme" />
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>

    <item android:state_checked="false" android:state_enabled="false">
        <shape>
            <solid android:color="@color/color_light_grey" />
            <stroke android:width="1dp" android:color="@color/color_light_grey" />
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
        </shape>
    </item>

</selector>