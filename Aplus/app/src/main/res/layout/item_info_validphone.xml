<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/phone_ly_phonecontent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingBottom="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/phone_ly_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_square_circle_green_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/info_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:src="@drawable/ico_tel_call" />

            <TextView
                android:id="@+id/phone_txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="4dp"
                android:text="**********"
                android:textColor="@color/colorBackground"
                android:textSize="@dimen/themeSizesmall" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/phone_ly_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:text="@string/direct_celling"/>
            
            <TextView
                android:id="@+id/phone_txt_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="@android:color/white"
                android:background="#E13F4F"
                android:text="@string/can_not"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_ly_remarkcontent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_txt_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color_itemt_detail_title"
            android:textStyle="bold"
            android:textSize="@dimen/themeSizesmall" />
    </LinearLayout>


</LinearLayout>