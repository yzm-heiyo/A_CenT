<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            style="@style/fragment_other_txt"
            android:text="@string/owner" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other_txt_ownertype"
                android:layout_width="0dp"
                android:layout_weight="5.6"
                android:layout_height="34dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down"
                android:paddingRight="10dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:textSize="12dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:text="@string/sale_buy_people"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_square_circle_stroke_deepgrey"/>

            <android.support.v4.widget.Space
                android:layout_width="18dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:background="@drawable/shape_square_circle_stroke_deepgrey"
                android:orientation="vertical">

                <com.centanet.hk.aplus.Widgets.ClearEditText
                    android:id="@+id/option_edit_ownername"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@color/color_translucent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            style="@style/fragment_other_txt"
            android:text="@string/phone" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <com.centanet.hk.aplus.Widgets.ClearEditText
            android:id="@+id/other_edit_phone"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:paddingRight="10dp"
            android:layout_height="34dp"
            android:background="@drawable/shape_square_circle_stroke_deepgrey"
            android:gravity="left|center_vertical" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            style="@style/fragment_other_txt"
            android:visibility="gone"
            android:text="@string/date" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other_txt_date"
                android:layout_width="0dp"
                android:layout_weight="5.6"
                android:layout_height="34dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down"
                android:paddingRight="10dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:textSize="12dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:text="@string/undate"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_square_circle_stroke_deepgrey"/>

            <android.support.v4.widget.Space
                android:layout_width="18dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/other_ll_choicedate"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:background="@drawable/shape_square_circle_stroke_deepgrey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/other_txt_choicedate"
                    style="@style/fragment_other_txt"
                    android:layout_width="match_parent"
                    android:text="@string/select_date_interval"
                    android:layout_centerVertical="true"
                    android:layout_height="34dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="visible"
                    android:textColor="@color/color_neutral_grey"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/other_txt_datesta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/color_black"
                    android:gravity="center_horizontal"
                    android:paddingTop="2dp"
                    android:textSize="12dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/other_txt_dateend"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/color_black"
                    android:gravity="center_horizontal|top"
                    android:textSize="12dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>