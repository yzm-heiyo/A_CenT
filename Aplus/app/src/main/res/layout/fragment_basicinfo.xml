<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <!-- 基本資料 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="6dp"-->
            <!--android:background="@color/color_theme_item" />-->

        <!-- 租售信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_rim_line"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- 售價 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 售價-價格 -->
                    <TextView
                        android:id="@+id/detail_txt_sale_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="售: "
                        android:textColor="@color/colortheme"
                        android:textSize="@dimen/themeSizeplus" />

                    <!-- 售價-小項目 -->
                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_use_rvg_price"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="實均價"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_really_rvg_price"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="建均價"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_entrust_3"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="委託書三"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_conjecture_data"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="估計日期"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_use_area"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="實用面積"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_really_area"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="建築面積"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_usepercent"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="實用率"></com.centanet.hk.aplus.Widgets.SmallItemView>


                </LinearLayout>

                <!-- 租價 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 租-價格 -->
                    <TextView
                        android:id="@+id/detail_txt_rent_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="租: "
                        android:textColor="#BB842D"
                        android:textSize="@dimen/themeSizeplus" />

                    <!-- 售價-小項目 -->
                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_use_rvg_rent"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="實均租"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_really_rvg_rent"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="建均租"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_entrust_5"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="委託書五"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_ssd"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="SSD"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_rvd_data"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="RVD日期"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_open_date"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="開盤日"></com.centanet.hk.aplus.Widgets.SmallItemView>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="提示"
                    android:textSize="@dimen/themeSize" />

                <TextView
                    android:id="@+id/detail_txt_tips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text=""
                    android:textColor="@color/color_itemt_detail_title"
                    android:textSize="@dimen/themeSize" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_theme_item" />

        <!-- 鑰匙信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_rim_line"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_key_unit" />

                <TextView
                    android:id="@+id/detail_key_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colortheme"
                    android:textSize="@dimen/themeSize"
                    android:text="@string/keyhouse"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_house_type"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="物業類型"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_catplace"
                        style="@style/smallitem_style"
                        app:SmallItemTitle="車位"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_interval"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="間隔"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_number"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="差餉編號"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_search"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="土地查冊"></com.centanet.hk.aplus.Widgets.SmallItemView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_direction"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="座向"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_housesum"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="樓層總數"></com.centanet.hk.aplus.Widgets.SmallItemView>

                    <com.centanet.hk.aplus.Widgets.SmallItemView
                        android:id="@+id/detail_txt_from"
                        style="@style/smallitem_style"
                        app:SmallItemContent=""
                        app:SmallItemTitle="來源"></com.centanet.hk.aplus.Widgets.SmallItemView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="標籤"
                    android:textSize="@dimen/themeSizesmall" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <com.centanet.hk.aplus.Widgets.LineBreakLayout
                        android:id="@+id/text_ll_taps_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"></com.centanet.hk.aplus.Widgets.LineBreakLayout>
                </LinearLayout>


            </LinearLayout>

            <com.centanet.hk.aplus.Widgets.SmallItemView
                android:id="@+id/detail_txt_attention"
                style="@style/smallitem_style"
                app:SmallItemContent=""
                app:SmallItemContentWeight="5"
                app:SmallItemTitle="關注事項"
                app:SmallItemTitleWeight="1"></com.centanet.hk.aplus.Widgets.SmallItemView>


            <com.centanet.hk.aplus.Widgets.SmallItemView
                android:id="@+id/detail_txt_supplement"
                style="@style/smallitem_style"
                app:SmallItemContent=""
                app:SmallItemContentWeight="5"
                app:SmallItemTitle="補充"
                app:SmallItemTitleWeight="1"></com.centanet.hk.aplus.Widgets.SmallItemView>


            <com.centanet.hk.aplus.Widgets.SmallItemView
                android:id="@+id/detail_txt_customization_1"
                style="@style/smallitem_style"
                app:SmallItemContent=""
                app:SmallItemContentWeight="5"
                app:SmallItemTitle="自訂一"
                app:SmallItemTitleWeight="1"></com.centanet.hk.aplus.Widgets.SmallItemView>

            <com.centanet.hk.aplus.Widgets.SmallItemView
                android:id="@+id/detail_txt_customization_2"
                style="@style/smallitem_style"
                app:SmallItemContentWeight="5"
                app:SmallItemTitle="自訂二"
                app:SmallItemTitleWeight="1"></com.centanet.hk.aplus.Widgets.SmallItemView>

            <com.centanet.hk.aplus.Widgets.SmallItemView
                android:id="@+id/detail_txt_customization_3"
                style="@style/smallitem_style"
                app:SmallItemContent=""
                app:SmallItemContentWeight="5"
                app:SmallItemTitle="自訂三"
                app:SmallItemTitleWeight="1"></com.centanet.hk.aplus.Widgets.SmallItemView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/colorline" />

            <com.centanet.hk.aplus.Widgets.SmallItemView
                android:id="@+id/detail_txt_remark"
                style="@style/smallitem_style"
                app:SmallItemContent=""
                app:SmallItemContentWeight="5"
                app:SmallItemTitle="備註"
                app:SmallItemTitleWeight="1"></com.centanet.hk.aplus.Widgets.SmallItemView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_theme_item" />

        <!-- 大廈備註 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_rim_line"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_buidling_rmk" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:text="大廈備註"
                    android:textColor="@color/colortheme"
                    android:textSize="@dimen/themeSize" />


            </LinearLayout>

            <com.centanet.hk.aplus.Widgets.SmallItemView
                android:id="@+id/detail_txt_movein_date"
                style="@style/smallitem_style"
                app:SmallItemContent=""
                app:SmallItemContentWeight="5"
                app:SmallItemTitle="入伙日"
                app:SmallItemTitleWeight="1"></com.centanet.hk.aplus.Widgets.SmallItemView>

            <com.centanet.hk.aplus.Widgets.SmallItemView
                android:id="@+id/detail_txt_management_cost"
                style="@style/smallitem_style"
                app:SmallItemContent=""
                app:SmallItemContentWeight="5"
                app:SmallItemTitle="管理費"
                app:SmallItemTitleWeight="1"></com.centanet.hk.aplus.Widgets.SmallItemView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_theme_item" />

    </LinearLayout>

</ScrollView>