<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tips_dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_hint">

    <RelativeLayout
        android:id="@+id/tips_dialoa_contentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/levelline"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_dialog_hint">

        <TextView
            android:id="@+id/tips_dialog_tip_txt"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </RelativeLayout>

    <View
        android:id="@+id/levelline"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/dialog_bottom"
        android:background="#efefef" />

    <LinearLayout
        android:id="@+id/dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tips_dialog_left"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:textSize="17dp"
            android:background="@android:color/transparent"
            android:text="@string/dialog_confirm_cancl" />

        <View
            android:id="@+id/dialog_tips_line"
            android:layout_width="2px"
            android:layout_height="44dp"
            android:background="#efefef" />

        <Button
            android:id="@+id/tips_dialog_right"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:textSize="17dp"
            android:background="@android:color/transparent"
            android:text="@string/dialog_confirm_confirm"
            android:textColor="#bb2e2d"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>