<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_translucent">

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_rounded_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="開始講話"
                android:textColor="@color/color_black_medium"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/shape_voice_input_ripple" />

                <com.centanet.hk.aplus.Views.Dialog.voice.VoiceView
                    android:id="@+id/voiceview"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/labConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="完成"
            android:textColor="@color/colortheme"
            android:textSize="18dp" />
    </RelativeLayout>


</FrameLayout>
