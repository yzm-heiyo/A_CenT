<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <com.centanet.hk.aplus.Widgets.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebarShowImage_left="false"
        app:titlebarText="@string/fragment_mine"></com.centanet.hk.aplus.Widgets.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/mine_img_ico"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:src="@drawable/ico_user" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/themeSizeplus"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mine_txt_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/themeSize" />

            <TextView
                android:id="@+id/mine_txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/themeSize" />

            <TextView
                android:id="@+id/mine_txt_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textSize="@dimen/themeSizesmall" />

            <TextView
                android:id="@+id/mine_txt_departname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/themeSizesmall" />

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shape_line_shade_up_to_down"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/color_translucent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="@color/color_theme_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/fragment_mine_item_style"
                    android:text="@string/fragment_mine_installation"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_rim" />


                <TextView
                    style="@style/fragment_mine_item_style"
                    android:text="@string/fragment_mine_staff"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/color_theme_item"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mine_txt_about"
                    style="@style/fragment_mine_item_style"
                    android:text="@string/fragment_mine_about" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/color_light_grey" />

                <TextView
                    android:id="@+id/mine_txt_clause"
                    style="@style/fragment_mine_item_style"
                    android:text="@string/app_use_clause" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/color_light_grey" />

                <TextView
                    android:id="@+id/fragment_mine_question"
                    style="@style/fragment_mine_item_style"
                    android:text="@string/fragment_mine_question" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_rim" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/color_theme_item" />

                <TextView
                    android:id="@+id/fragment_mine_logout"
                    style="@style/fragment_mine_item_style"
                    android:background="@drawable/layer_button"
                    android:gravity="center"
                    android:text="@string/fragment_mine_logout"
                    android:textColor="@color/colortheme" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>