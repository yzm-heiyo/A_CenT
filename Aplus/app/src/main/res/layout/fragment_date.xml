<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            style="@style/fragment_other_txt"
            android:text="@string/date" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other_txt_date"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="34dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down"
                android:paddingRight="10dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:textSize="10dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:text="@string/undate"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_square_circle_stroke_deepgrey"/>

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/other_ll_choicedate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shape_square_circle_stroke_deepgrey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/other_txt_choicedate"
                    style="@style/fragment_other_txt"
                    android:layout_width="match_parent"
                    android:text="@string/select_date_interval"
                    android:layout_centerVertical="true"
                    android:layout_height="34dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="visible"
                    android:textColor="@color/color_neutral_grey"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/other_txt_datesta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/color_black"
                    android:gravity="center_horizontal"
                    android:paddingTop="2dp"
                    android:textSize="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/other_txt_dateend"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/color_black"
                    android:gravity="center_horizontal|top"
                    android:textSize="10dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:id="@+id/other_ll_statuchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                style="@style/fragment_other_txt"
                android:text="@string/statu_change" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/other_txt_stastart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="34dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down"
                    android:paddingRight="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:singleLine="true"
                    android:text="@string/dialog_price_unlimit"
                    android:paddingLeft="10dp"
                    android:background="@drawable/shape_square_circle_stroke_deepgrey"/>

                <TextView
                    style="@style/fragment_other_txt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="18dp"
                    android:text="@string/to" />

                <TextView
                    android:id="@+id/other_txt_staend"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="34dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down"
                    android:paddingRight="10dp"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:text="@string/dialog_price_unlimit"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/shape_square_circle_stroke_deepgrey"/>


            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>