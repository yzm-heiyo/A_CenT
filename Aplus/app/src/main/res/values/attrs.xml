<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CentaLoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <declare-styleable name="ProcessBarView">
        <attr name="color_line_normal" format="color" />
        <attr name="color_line_select" format="color" />
        <attr name="stroke_width_normal" format="dimension" />
        <attr name="stroke_width_select" format="dimension" />
        <attr name="progress_icon" format="reference" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="titlebarText" format="string" />
        <attr name="titlebarTextColor" format="string" />
        <attr name="titlebarTextSize" format="string" />
        <attr name="titlebarRighttext" format="string" />
        <attr name="titlebarShowImage_left" />

        <attr name="titleBarTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SmallItemView">
        <attr name="SmallItemTitle" format="string" />
        <attr name="SmallItemContent" format="string" />
        <attr name="SmallItemTitleWeight" format="float" />
        <attr name="SmallItemContentWeight" format="float" />
        <attr name="SmallItemContentColor" format="color" />
        <attr name="SmallItemTitleColor" format="color" />
        <attr name="SmallItemTitleSize" format="dimension" />
        <attr name="SmallItemContentSize" format="dimension" />

        <attr name="SmallItemTitleStyle">
            <enum name="normal" value="0" />
            <enum name="telephone" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SmartLinBreakView">
        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="LineBreakLayout">
        <!--标签之间左右距离-->
        <attr name="leftAndRightSpace1" format="dimension" />
        <!--标签行距-->
        <attr name="rowSpace1" format="dimension" />
    </declare-styleable>


</resources>